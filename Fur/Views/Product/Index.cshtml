@model IEnumerable <Fur.Models.Product>
@{
    ViewBag.Title = "products";
}
<div class="container" style="padding-top:25px;">

    <div class="row">

        <div id="col" style="display:none;">Red</div>
        <p id="siz" style="display:none;">S</p>
        @foreach (var item in Model)
        {
            if (Convert.ToInt32(ViewData["Nomer"]) == item.Id)
            {<i id="art" style="display:none;">@item.Offer.Articul</i>

            <img src="../../img/@item.Category.Name/@item.Photo.Photi" style="height:250px" />
            <p><strong>Название:</strong><i>@item.Name</i></p>


            <div>
                <p id="drow">Выберете цвет</p>
                <input type="button" id="1" name="color" class="razmer_k" style="background: rgb(255, 0, 0);" />
                <input type="button" id="2" name="color" class="razmer_k" style="background: #76ff7a;" />
            </div>
            <div>
                <p>Выберете размер</p>
                <input type="submit" name="size" id="3" class="razmer_k" style="background: rgb(138, 138, 138);" value="S" />
                <input type="submit" name="size" id="4" class="razmer_k" value="M" />
            </div>

            <div id="results"></div>
            <div id="skrit">
            <p><strong>Стоимость:</strong><i>@item.Offer.Price</i></p>
            <p><strong>Артикуль:</strong><i>@item.Offer.Articul</i></p>
                </div>
            <p><strong>Категория:</strong><i>@item.Category.Name</i></p>
        }
    }

    </div>
    <script>
        $(document).ready(function () {
        $('#1').click(function (e) {
            e.preventDefault();
            document.getElementById('skrit').style = "display:none;";
            document.getElementById('1').style = "background: #ff0000;";
            document.getElementById('2').style = "background: #76ff7a;";
            var coli = $('#col');
            coli.empty();
            coli.append("Red");
           var size = $('#siz').html();
            var art = $('#art').html();
            color = "Red";

            switch (size) {
                case "S": size = "1"; break;
                case "M": size = "2"; break;
            }

            switch (color) {
                case "Red": color = "1"; break;
                case "Green": color = "2"; break;
            }
            var souz = color + size;
           // alert(souz);
            $('#results').load('/Product/Color?art=' + art,'souz='+souz);
            });
        $('#2').click(function (e) {
            e.preventDefault();

            document.getElementById('skrit').style = "display:none;";
                document.getElementById('1').style = "background: #ff6666;";
                document.getElementById('2').style = "background: #008000;";
                var coli = $('#col');
                coli.empty();
                coli.append("Green");
                var size = $('#siz').html();
                var art = $('#art').html();
                color = "Green";
                switch (size) {
                    case "S": size = "1"; break;
                    case "M": size = "2"; break;
                }
                switch (color) {
                    case "Red": color = "1"; break;
                    case "Green": color = "2"; break;
                }
                
            var souz = color + size;
           // alert(souz);
                $('#results').load('/Product/Color?art=' + art, 'souz=' + souz);
            });
        $('#3').click(function (e) {
            e.preventDefault();

            document.getElementById('skrit').style = "display:none;";
                document.getElementById('3').style = "background: #8a8a8a;";
                document.getElementById('4').style = "background: #dddddd;";
                var coli = $('#siz');
                coli.empty();
                coli.append("S");
                var color = $('#col').html();
                var art = $('#art').html();//берем артикул
                var size = "S";

                switch (size) {
                    case "S": size = "1"; break;
                    case "M": size = "2"; break;
                }

                switch (color) {
                    case "Red": color = "1"; break;
                    case "Green": color = "2"; break;
                }
            var souz = color + size;

            //alert(souz);
                $('#results').load('/Product/Color?art=' + art, 'souz=' + souz);
            });
        $('#4').click(function (e) {
            e.preventDefault();

            document.getElementById('skrit').style = "display:none;";
            document.getElementById('3').style = "background: #dddddd;";
            document.getElementById('4').style = "background: #8a8a8a;";
            var coli = $('#siz');
            coli.empty();
            coli.append("M");
            var color = $('#col').html();
            var art = $('#art').html();//берем артикул
            var size = "M";

            switch (size) {
                case "S": size = "1"; break;
                case "M": size = "2"; break;
            }

            switch (color) {
                case "Red": color = "1"; break;
                case "Green": color = "2"; break;
            }
            var souz = color + size;

           // alert(souz);
            $('#results').load('/Product/Color?art=' + art, 'souz=' + souz);
            });
    });
    </script>



    @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
